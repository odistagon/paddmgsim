    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <name>PadDmgSim</name>
    <description>
        Calculates Pad game damage.
    </description>
    <author email="odistagon@gmail.com" href="">
        odistagon
    </author>
    <content src="paddmgsim.html" />
    <access origin="*" />
